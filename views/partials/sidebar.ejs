<div class="flex flex-col h-full">
    <!-- Header -->
    <div class="p-4 border-b">
        <div class="flex items-center justify-between mb-3">
            <h1 class="text-lg font-semibold">Postman Clone</h1>
            <button class="btn btn-ghost btn-icon" data-tooltip="Settings">
                <i class="fi fi-rr-settings text-muted-foreground hover:text-foreground"></i>
            </button>
        </div>
        
        <%- include('workspace-selector') %>
    </div>

    <!-- Collections Header -->
    <div class="p-4 border-b">
        <div class="flex items-center justify-between">
            <h2 class="text-sm font-medium">Collections</h2>
            <div id="create-dropdown"></div>
        </div>
    </div>

    <!-- Collection Tree -->
    <div class="flex-1 overflow-auto">
        <div id="collection-tree" class="p-2">
            <!-- Collections will be loaded here via JavaScript -->
        </div>
    </div>

    <!-- Variables Section -->
    <div class="p-4 border-t bg-muted">
        <h3 class="text-sm font-medium mb-2">Variables</h3>
        <div id="variables-info" class="text-xs text-muted-foreground">
            No variables defined
        </div>
    </div>
</div>

<script>
// Initialize the create dropdown when the page loads
document.addEventListener('DOMContentLoaded', function() {
    const createDropdownContainer = document.getElementById('create-dropdown');
    if (createDropdownContainer && window.createDropdown) {
        const dropdown = window.createDropdown({
            trigger: '<i class="fi fi-rr-plus"></i>',
            items: [
                {
                    icon: 'fi fi-rr-folder',
                    text: 'New Folder',
                    onClick: () => createFolder()
                },
                {
                    icon: 'fi fi-rr-document',
                    text: 'New Request',
                    onClick: () => createRequest()
                }
            ],
            align: 'right'
        });
        createDropdownContainer.appendChild(dropdown);
    }
});
</script>